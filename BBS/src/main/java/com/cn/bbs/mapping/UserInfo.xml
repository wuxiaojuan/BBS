<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="User">

	<insert id="saveuser" parameterType="com.cn.bbs.model.UserInfo">
		insert into
		t_user(USERNAME,PASSWORD,QQ) values
		(#{username},#{password},#{qq})
	</insert>

	<select id="getuserbyname" parameterType="String" resultType="com.cn.bbs.model.UserInfo">
		select * from t_user u where u.username = #{usernmae}
	</select>
	
	
	<select id="getusercountbyname" parameterType="String"
		resultType="int">
		select count(1) from t_user u where 1=1
		<if test=" _parameter != null and  _parameter != ''">
			and u.username = #{_parameter}
		</if>
	</select>

</mapper>