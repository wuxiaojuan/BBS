<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="User">

	<insert id="saveuser" parameterType="com.cn.bbs.model.UserInfo">
		insert into
		user(ID,USERNAME,PASSWORD) values
		(#{id},#{username},#{password})
	</insert>


	<select id="getuserbyname" parameterType="String" resultType="com.cn.bbs.model.UserInfo">
		select * from user u where u.username = #{usernmae}
	</select>

</mapper>